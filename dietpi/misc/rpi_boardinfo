#!/bin/bash
{
	#////////////////////////////////////
	# DietPi
	#
	#////////////////////////////////////
	# Created by Daniel Knight / daniel_haze@hotmail.com / fuzon.co.uk
	#////////////////////////////////////
	#
	# Info:
	# - Obtains/prints board info based on http://elinux.org/RPi_HardwareHistory#Board_Revision_History
	#////////////////////////////////////

	#Grab Input (valid int)
	INPUT=0
	if [[ $1 =~ ^-?[0-9]+$ ]]; then
		INPUT=$1
	fi

	HW_REVISION=0
	HW_MODEL_NAME='Unknown'
	HW_RELEASE_DATE='Unknown'
	HW_PCB_REVISION='Unknown'
	MEMORY=0
	MANUFACTURER='Unknown'

	#-----------------------------------------------------------------------------------
	#Obtain device info by revision number
	# + Remove overvoltage 1000 value | If you see a "1000" at the front of the Revision, e.g. 10000002 then it indicates[1] that your Raspberry Pi has been over-volted
	HW_REVISION=$(cat /proc/cpuinfo | grep 'Revision' | awk '{print $3}' | sed 's/^1000//')
	if [ "$HW_REVISION" = "Beta" ]; then
		HW_RELEASE_DATE='Q1 2012'
		HW_MODEL_NAME='Beta'
		HW_PCB_REVISION='Unknown'
		MEMORY=256
		MANUFACTURER='Unknown'
	elif [ "$HW_REVISION" = "0002" ]; then
		HW_RELEASE_DATE='Q1 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='1.0'
		MEMORY=256
		MANUFACTURER='Unknown'
	elif [ "$HW_REVISION" = "0003" ]; then
		HW_RELEASE_DATE='Q3 2012'
		HW_MODEL_NAME='B (ECN0001)'
		HW_PCB_REVISION='1.0'
		MEMORY=256
		MANUFACTURER='Unknown'
	elif [ "$HW_REVISION" = "0004" ]; then
		HW_RELEASE_DATE='Q3 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='2.0'
		MEMORY=256
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "0005" ]; then
		HW_RELEASE_DATE='Q4 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='2.0'
		MEMORY=256
		MANUFACTURER='Qisda'
	elif [ "$HW_REVISION" = "0006" ]; then
		HW_RELEASE_DATE='Q4 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='2.0'
		MEMORY=256
		MANUFACTURER='Egoman'
	elif [ "$HW_REVISION" = "0007" ]; then
		HW_RELEASE_DATE='Q1 2013'
		HW_MODEL_NAME='A'
		HW_PCB_REVISION='2.0'
		MEMORY=256
		MANUFACTURER='Egoman'
	elif [ "$HW_REVISION" = "0008" ]; then
		HW_RELEASE_DATE='Q1 2013'
		HW_MODEL_NAME='A'
		HW_PCB_REVISION='2.0'
		MEMORY=256
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "0009" ]; then
		HW_RELEASE_DATE='Q1 2013'
		HW_MODEL_NAME='A'
		HW_PCB_REVISION='2.0'
		MEMORY=256
		MANUFACTURER='Qisda'
	elif [ "$HW_REVISION" = "000d" ]; then
		HW_RELEASE_DATE='Q4 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='2.0'
		MEMORY=512
		MANUFACTURER='Egoman'
	elif [ "$HW_REVISION" = "000e" ]; then
		HW_RELEASE_DATE='Q4 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='2.0'
		MEMORY=512
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "000f" ]; then
		HW_RELEASE_DATE='Q4 2012'
		HW_MODEL_NAME='B'
		HW_PCB_REVISION='2.0'
		MEMORY=512
		MANUFACTURER='Qisda'
	elif [ "$HW_REVISION" = "0010" ]; then
		HW_RELEASE_DATE='Q3 2014'
		HW_MODEL_NAME='B+'
		HW_PCB_REVISION='1.0'
		MEMORY=512
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "0011" ]; then
		HW_RELEASE_DATE='Q2 2014'
		HW_MODEL_NAME='Compute Module'
		HW_PCB_REVISION='1.0'
		MEMORY=512
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "0012" ]; then
		HW_RELEASE_DATE='Q4 2014'
		HW_MODEL_NAME='A+'
		HW_PCB_REVISION='1.0'
		MEMORY=256
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "0013" ]; then
		HW_RELEASE_DATE='Q1 2015'
		HW_MODEL_NAME='B+'
		HW_PCB_REVISION='1.2'
		MEMORY=512
		MANUFACTURER='Unknown'
	elif [ "$HW_REVISION" = "a01041" ]; then
		HW_RELEASE_DATE='Q1 2015'
		HW_MODEL_NAME='2 Model B'
		HW_PCB_REVISION='1.1'
		MEMORY=1024
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "a21041" ]; then
		HW_RELEASE_DATE='Q1 2015'
		HW_MODEL_NAME='2 Model B'
		HW_PCB_REVISION='1.1'
		MEMORY=1024
		MANUFACTURER='Embest, China'
	elif [ "$HW_REVISION" = "a22082" ]; then
		HW_RELEASE_DATE='Q1 2016'
		HW_MODEL_NAME='3 Model B'
		HW_PCB_REVISION='1.2'
		MEMORY=1024
		MANUFACTURER='Sony'
	elif [ "$HW_REVISION" = "900092" ]; then
		HW_RELEASE_DATE='Q4 2015'
		HW_MODEL_NAME='Zero'
		HW_PCB_REVISION='1.2'
		MEMORY=512
		MANUFACTURER='Sony'
	fi

	#-----------------------------------------------------------------------------------
	#Print
	if (( $INPUT == 0 )); then
		echo -e "\n\n"
		echo -e " \e[90m - RPi Board Info - \e[0m"
		echo -e " Revision         \e[90m|\e[0m     $HW_REVISION"
		echo -e " Released         \e[90m|\e[0m     $HW_RELEASE_DATE"
		echo -e " Model            \e[90m|\e[0m     $HW_MODEL_NAME"
		echo -e " Memory           \e[90m|\e[0m     $MEMORY MB"
		echo -e " Manufacturer     \e[90m|\e[0m     $MANUFACTURER"
		echo -e "\n"

	#DietPi - print device name for return use
	elif (( $INPUT == 1 )); then
		echo -e "$HW_MODEL_NAME"
	fi

	#-----------------------------------------------------------------------------------
	exit
	#-----------------------------------------------------------------------------------
}
