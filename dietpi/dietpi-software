		# - Stretch+: Replaced by TigerVNC (VNC4)
		for ((i=4; i<=$MAX_G_DISTRO; i++))
		do

			aSOFTWARE_AVAIL_G_DISTRO[$software_id,$i]=0

		done

		#------------------
		software_id=28

