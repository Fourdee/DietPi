[program:mineos]
command=/usr/local/bin/node webui.js
directory=$G_FP_DIETPI_USERDATA/mineos/minecraft
environment=HOME=$G_FP_DIETPI_USERDATA/mineos
user=root
autostart=true
autorestart=true
redirect_stderr=true
_EOF_

			supervisorctl reload

