				if (( $G_HW_MODEL >= 10 && $G_HW_MODEL < 20 )); then

					DEPS_LIST='libgnome-keyring0 libnspr4 libnss3 libnss3-1d libspeechd2 libxslt1.1 libxss1 xdg-utils libgnome-keyring-common libltdl7'

