		# - ARMv6
		aSOFTWARE_AVAIL_G_HW_ARCH[$software_id,1]=0

		#------------------
		software_id=174

		aSOFTWARE_WHIP_NAME[$software_id]='GIMP'
		aSOFTWARE_WHIP_DESC[$software_id]='mspaint on steroids'
