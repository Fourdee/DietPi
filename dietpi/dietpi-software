			webserver_apache_w="on"
			#Reset to 0. Menu checklists will apply back to 1
			if (( $WEBSERVER_APACHE == 1 )); then
				WEBSERVER_APACHE=0
			fi
		fi

		local webserver_nginx_w="off"
