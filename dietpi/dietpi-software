			if (( $G_HW_ARCH < 3 )); then

				apackages+=('https://www.signalyst.eu/bins/naa/linux/stretch/networkaudiod_3.5.6-41_armhf.deb')

			# - ARMv8
			elif (( $G_HW_ARCH == 3 )); then

				apackages+=('https://www.signalyst.eu/bins/naa/linux/stretch/networkaudiod_3.5.6-41_arm64.deb')

