			# - armv7
			elif (( $G_HW_ARCH == 2 )); then

				binary_name+='armv7'

			# - arm64
			elif (( $G_HW_ARCH == 3 )); then

				binary_name+='armv8'

			# - x86_64
			elif (( $G_HW_ARCH == 10 )); then

