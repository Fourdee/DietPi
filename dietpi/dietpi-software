				apackages+=('https://www.signalyst.eu/bins/naa/linux/stretch/networkaudiod_3.5.6-41_amd64.deb')

			fi

			# Check online
			for i in "${apackages[@]}"
			do

				G_CHECK_URL "$i"

			done

			# Install
			for i in "${apackages[@]}"
			do

				no_check_url=1 Download_Install "$i"

			done

			unset apackages

