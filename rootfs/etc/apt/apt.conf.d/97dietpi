## https://manpages.debian.org/apt.conf
# Disable automatic recommends/suggests install and allow them to be autoremoved
APT::Install-Recommends "false";
APT::Install-Suggests "false";
APT::AutoRemove::RecommendsImportant "false";
APT::AutoRemove::SuggestsImportant "false";
# Disable package state translation downloads
Acquire::Languages "none";
# Preserve modified and missing DEB package config files
DPkg::options {"--force-confdef,confold";};
