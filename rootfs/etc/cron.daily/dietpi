#!/bin/bash
{
	#////////////////////////////////////
	# DietPi Cron.Daily script
	#
	#////////////////////////////////////
	#
	# Info:
	# - Location /etc/cron.daily/dietpi
	#
	#////////////////////////////////////

	#----------------------------------------------------------------
	# Main Loop
	#----------------------------------------------------------------
	# Time sync update, if mode 2 (daily) is detected
	if grep -qi '^[[:blank:]]*CONFIG_NTP_MODE=2' /DietPi/dietpi.txt; then

		/DietPi/dietpi/func/run_ntpd 1 &> /dev/null &

	fi
	#----------------------------------------------------------------
	# Check/Update DietPi

	exit
	#----------------------------------------------------------------
}
